<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="pizza"
            type="com.zumepizza.interview.model.Pizza"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailFragment"
        >
        <ImageButton
            android:id="@+id/up"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_gravity="start|top"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="Navigate Up"
            android:elevation="5dp"
            app:srcCompat="@drawable/ic_arrow_back"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_buy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/img_detail"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:scaleType="centerCrop"
                        tools:src="@tools:sample/backgrounds/scenic"
                        />
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="@{pizza.name}"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        tools:text="GF Cheazy-E"
                        />
                    <TextView
                        android:id="@+id/tv_pizza_menu_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{pizza.menu_description}"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="?android:attr/textColorSecondary"
                        tools:text="Gluten-Free crust under our cheazy blend"
                        />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        >

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="140dp"
                            android:layout_marginTop="24dp"
                            android:text="$12.95"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <LinearLayout
                            android:id="@+id/group_counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_price"
                            app:layout_constraintStart_toEndOf="@+id/tv_price"
                            app:layout_constraintTop_toTopOf="@+id/tv_price"
                            >
                            <ImageButton
                                android:id="@+id/btn_minus"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:background="@drawable/ic_minus"
                                />
                            <TextView
                                android:id="@+id/tv_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingEnd="8dp"
                                android:paddingStart="8dp"
                                android:text="1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textSize="18sp"
                                />
                            <ImageButton
                                android:id="@+id/btn_plus"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:background="@drawable/ic_plus"
                                />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackground"
                        android:paddingEnd="@dimen/spacing_normal"
                        android:paddingVertical="@dimen/spacing_normal"
                        android:visibility="visible"
                        >
                        <TextView
                            android:id="@+id/tag_spicy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_tag_spicy"
                            android:fontFamily="monospace"
                            android:paddingEnd="3dp"
                            android:paddingStart="2dp"
                            android:text="SPICY"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:typeface="sans"
                            android:visibility="visible"
                            app:layout_constraintEnd_toStartOf="@+id/tag_vege"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <TextView
                            android:id="@+id/tag_vege"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/holo_green_light"
                            android:fontFamily="sans-serif"
                            android:paddingEnd="3dp"
                            android:paddingStart="2dp"
                            android:text="VEGETARIAN"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            app:layout_constraintEnd_toStartOf="@+id/tag_gl"
                            app:layout_constraintStart_toEndOf="@+id/tag_spicy"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <TextView
                            android:id="@+id/tag_gl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:background="@android:color/holo_orange_light"
                            android:fontFamily="monospace"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="GF"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tag_vege"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/tv_toppings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="TOPPINGS"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycle_toppings"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:scrollbars="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_toppings"
                        tools:listitem="@android:layout/simple_list_item_1"
                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </ScrollView>
            <Button
                android:id="@+id/btn_buy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/colorPrimary"
                android:text="ADD TO ORDER"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

